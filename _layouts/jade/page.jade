doctype html
html(lang="{{page.lang}}")
    include includes/head.jade

    body.page(class="{% if page.bodyclass %}{{ page.bodyclass }}{% endif %} {{ page.lang | prepend: 'lang-' }}")
        include includes/nav.jade
        
        include includes/header.jade

        .wrapper
            section.main_container
                .container
                    article
                        {% if page.page-title == "yes" %}
                        h1.title {{ page.title }}
                        {% endif %}
                        
                        {% if page.subtitle %}
                        h2.subtitle {{ page.subtitle }}
                        {% endif %}
                        
                        div(class="content {% if page.side-img == true %}has-side-img{%endif%}")
                            {% if page.side-img == true %}
                            .side-content {{ content }}
                            .side-img
                                img(src="{{ site.img_dir }}/{{ page.side-img-file }}", alt="{{ page.side-img-file }}")
                            {% else %}
                            {{ content }}
                            {% endif %}
                    // article end
                // .container end
            // section end
        // .wrapper end

        include includes/footer.jade

    // body end
// html end
